<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.game.andreliu.dungeondivers.init.NewGameActivity$PlaceholderFragment">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center|top">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Difficulty" android:id="@+id/textView" />
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:id="@+id/Items"
            android:gravity="center">
            <LinearLayout android:orientation="vertical" android:layout_width="180dp"
                android:layout_height="fill_parent" android:id="@+id/Easy" android:clickable="true"
                android:gravity="center" android:layout_margin="5dp" android:background="#d2d2d2"
                android:onClick="onClick">
                <TextView android:layout_width="wrap_content" android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Strolling (Easy)" android:id="@+id/titleEasyLabel"
                    android:gravity="center" />
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Full heal upon returning to town, no game overs. Good for first timers." android:id="@+id/descriptionEasyLabel"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center" />
                <RadioButton android:layout_width="wrap_content"
                    android:layout_height="fill_parent" android:id="@+id/radioEasy" android:checked="true"
                    android:gravity="bottom" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="180dp"
                android:layout_height="fill_parent" android:id="@+id/Normal" android:clickable="true"
                android:gravity="center" android:layout_margin="5dp" android:background="#d2d2d2"
                android:onClick="onClick">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge" android:text="Adventure (Normal)"
                    android:id="@+id/titleNormalLabel"
                    android:gravity="center" />
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Party members need to be ressurrected upon death. For your average RPG player." android:id="@+id/descriptionNormalLabel"
                    android:paddingLeft="20dp" android:paddingRight="20dp"
                    android:gravity="center" />
                <RadioButton android:layout_width="wrap_content"
                    android:layout_height="fill_parent" android:id="@+id/radioNormal"
                    android:checked="false" android:gravity="bottom" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="180dp"
                android:layout_height="fill_parent" android:id="@+id/Hard" android:clickable="true"
                android:gravity="center" android:layout_margin="5dp"
                android:background="#d2d2d2"
                android:onClick="onClick">
                <TextView android:layout_width="wrap_content" android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Harsh Reality (Hard)" android:id="@+id/titleHardLabel"
                    android:gravity="center" />
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Permanent party member death. Immediate game over if hero dies. Additional bad events."
                    android:id="@+id/descriptionHardLabel" android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center" />
                <RadioButton android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:id="@+id/radioHard" android:checked="false" android:gravity="bottom" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:gravity="bottom">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:id="@+id/Buttons" android:gravity="center">
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Next" android:id="@+id/button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
